<?xml version="1.0"?>

<PropertyList>

 <sim>
 
  <author>Michael Koehne (FDM) / BARANGER Emmanuel (3D)</author>
  <status>alpha</status>
  
  <fuel-fraction>1.0</fuel-fraction>
  
  <sound>
    <audible>true</audible>
    <path>Aircraft/ME-262/Sounds/me262-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/ME-262/Models/me262.xml</path>
  </model>

  <startup>
   <splash-texture>Aircraft/ME-262/me262-splash.rgb</splash-texture>
  </startup>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <chase-distance-m type="double" archive="y">-30.0</chase-distance-m>
  
  <view n="0">
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y"> 0.000 </x-offset-m>
      <y-offset-m archive="y"> 0.952 </y-offset-m>
      <z-offset-m archive="y">-1.264 </z-offset-m>
      <default-field-of-view-deg>55</default-field-of-view-deg>
      <pitch-offset-deg>-14</pitch-offset-deg>
    </config>
  </view>

  <help>
    <title>Messerschmitt Me 262</title>
    <key>
      <name>d</name>
      <desc>Open/Close canopy</desc>
    </key>
  </help>
    
 </sim>

 <engines>
   <engine n="0">
     <engine-num type="int">0</engine-num>
     <running>true</running>
   </engine>
   <engine n="1">
     <engine-num type="int">1</engine-num>
     <running>true</running>
   </engine>
 </engines>

 <consumables>
   <fuel>
     <tank n="0">
       <tank-num type="int">0</tank-num>
       <level-gal_us archive="y">2070</level-gal_us>
     </tank>
   </fuel>
 </consumables>

 <input>
   <keyboard include="Nasal/me262-keyboard.xml"/>
 </input>
 
 <controls>
  <!-- gear> <brake-parking>1</brake-parking> </gear -->
 </controls>

 <nasal>
   <me262>
     <file>Aircraft/ME-262/Nasal/doors.nas</file>
   </me262>
 </nasal>

</PropertyList>
